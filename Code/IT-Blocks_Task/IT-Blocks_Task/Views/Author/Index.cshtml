@model IEnumerable<Domain.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Author_Layout.cshtml";
}

<h1>Index</h1>

<p>
    
</p>
<table class="table table-striped table-dark table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Book Name")
            </th>
            <th>
                @Html.DisplayName("Book Description")
            </th>
            <th>
                @Html.DisplayName("Amount")
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookAmount)
            </td>
            <td>
                <input type="button" value="Details" class="btn btn-light" onclick="location.href='@Url.Action("Details", "Author")?id=' + @item.BookId"/>

             
            </td>
           
        </tr>
}
    </tbody>
</table>
