@model Domain.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Author_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Book Name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Book Description")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Amount")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookAmount)
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayName("Author")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.UserFname)
        </dd>
    </dl>
</div>
<div>
    <input type="button" value="Back to List" class="btn btn-success" onclick="location.href='@Url.Action("Index", "Author")'" />

</div>
