@model Domain.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Author_Admin_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Author First Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserFname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Author Last Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserLname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Login Id")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserLoginId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Login Password")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserLoginPasswrod)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
