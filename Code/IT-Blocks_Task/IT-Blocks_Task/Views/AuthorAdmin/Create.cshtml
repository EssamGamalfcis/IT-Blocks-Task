@model Domain.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Author_Admin_Layout.cshtml";
}

<h1>Create</h1>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserFname" class="control-label">Author First Name</label>
                <input asp-for="UserFname" class="form-control" />
                <span asp-validation-for="UserFname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserLname" class="control-label">Author Last Name</label>
                <input asp-for="UserLname" class="form-control" />
                <span asp-validation-for="UserLname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserLoginId" class="control-label">Login Id</label>
                <input asp-for="UserLoginId" class="form-control" />
                <span asp-validation-for="UserLoginId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserLoginPasswrod" class="control-label">Login Password</label>
                <input asp-for="UserLoginPasswrod" class="form-control" />
                <span asp-validation-for="UserLoginPasswrod" class="text-danger"></span>
            </div>
           
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
