@model Domain.BookLoan

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Loan_Layout.cshtml";
}

<h1>Create</h1>

<h4>BookLoan</h4>
<h2>
    <p class="text-danger">@TempData["AmountError"]</p>
</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoanId" class="control-label"></label>
                <select asp-for="LoanId" class="form-control" asp-items="ViewBag.LoanId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoanReturnDate" class="control-label"></label>
                <input name="LoanReturnDate" class="form-control" type="date">
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
