@model IEnumerable<Domain.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h1>Index</h1>

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

<form action="Search" method="post" enctype="multipart/form-data">
    <div class="input-group">
        <input type="text" required class="form-control" placeholder="Search by Departement Name" name="BookName">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
    <br />
    <div class="input-group">
        <input type="button" value="Create New" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Admin")'" />
    </div>
        <br /><br />
</form>





<h2>
    <p class="text-danger">@TempData["CustomError"]</p>
</h2>





<table class="table table-striped table-dark table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Book Name")
            </th>
            <th>
                @Html.DisplayName("Book Description")
            </th>
            <th>
                @Html.DisplayName("Amount")
            </th>
            <th>
                @Html.DisplayName("Author Name")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.UserLoginId)
                </td>
                <td>
                    <input type="button" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Admin")?id=' + @item.BookId" />
                    <input type="button" value="Details" class="btn btn-info" onclick="location.href='@Url.Action("Details", "Admin")?id=' + @item.BookId" />
                    <input type="button" value="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Admin")?id=' + @item.BookId" />


                </td>
            </tr>
        }
    </tbody>
</table>
