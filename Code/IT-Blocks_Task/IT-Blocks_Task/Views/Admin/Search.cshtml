@model Domain.Book
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";

}
<h1>Index</h1>
<p>
    <input type="button" value="Create New" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Admin")'" />

</p>
    <div class="container">
        <div class="row align-content-md-end">
            <H1 class="text-danger">@TempData["NotFound"]</H1>
        </div>
    </div>
<table class="table table-striped table-dark table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Book Name")
            </th>
            <th>
                @Html.DisplayName("Book Description")
            </th>
            <th>
                @Html.DisplayName("Amount")
            </th>
            <th>
                @Html.DisplayName("Author Name")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => @Model.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.BookDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.BookAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Author.UserLoginId)
                </td>
                <td>
                    @{ if (Model.BookId ==0) {
                        }
                        else
                        {
                    <input type="button" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Admin")?id=' + @Model.BookId" />
                    <input type="button" value="Details" class="btn btn-info" onclick="location.href='@Url.Action("Details", "Admin")?id=' + @Model.BookId" />
                    <input type="button" value="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Admin")?id=' + @Model.BookId" />

                            }
                        }

                </td>
            </tr>
        
    </tbody>
</table>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
